<h1>All Lists</h1>

<%= link_to "New List", new_list_path, class: "btn btn-primary mb-3" %>

<ul class="list-group">
  <% @lists.each do |list| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to list.name, list_path(list) %>
      <div>
        <%= link_to "Edit", edit_list_path(list), class: "btn btn-sm btn-secondary" %>
        <%= link_to "Delete", list_path(list),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-sm btn-danger" %>
      </div>
    </li>
  <% end %>
</ul>
