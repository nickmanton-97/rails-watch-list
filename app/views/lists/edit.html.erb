<h1>Edit List</h1>

<%= form_with(model: @list, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <%= form.submit "Update List", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", lists_path, class: "btn btn-secondary mt-2" %>
