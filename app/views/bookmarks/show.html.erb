<h3>Add a movie to <%= @list.name %></h3>

<%= form_with(model: [@list, Bookmark.new]) do |f| %>
  <div class="mb-3">
    <%= f.label :movie_id, "Movie" %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title, prompt: "Select a movie", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :comment %>
    <%= f.text_field :comment, class: "form-control" %>
  </div>

  <%= f.submit "Add Movie", class: "btn btn-primary mt-2" %>
<% end %>

<%= link_to "Back to list", @list, class: "btn btn-secondary mt-3" %>
